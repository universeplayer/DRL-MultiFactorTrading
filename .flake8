[flake8]
max-line-length = 120
max-complexity = 15
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
ignore =
    # line too long (handled by max-line-length)
    E501,
    # whitespace before ':'
    E203,
    # line break before binary operator
    W503
per-file-ignores =
    # imported but unused in __init__.py
    __init__.py:F401
